<h1>Add a New Transaction</h1>

<form method="post" action="/transactions">
  <select name="merchant_id">
    <% for merchant in @all_merchants %>
    <option value="<%= merchant.id %>"><%= merchant.name %></option>
    <% end %>
  </select>

  <select name="tag_id">
    <% for tag in @all_tags %>
    <option value="<%= tag.id %>"><%= tag.name %></option>
    <% end %>
  </select>

  <label for="amount-spent">Amount spent (in Â£): </label>
  <input type="number" min="0.00" step="0.01" name="amount" id="amount-spent" value="">

  <label for="date-and-time">Date and Time:</label>
  <input type="datetime-local" id="date-and-time" name="transaction_time" value="<%= Time.now().strftime("%FT%H:%M") %>" max="<%= Time.now().strftime("%FT%H:%M").to_s() %>">
  <input type="submit" value="Save Transaction">
</form>

